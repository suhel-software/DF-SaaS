<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_job_center_form" model="ir.ui.view">
        <field name="name">job.center.form</field>
        <field name="model">job.center</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" placeholder="Cost Center"/>
                        <field name="location" placeholder="Location"/>
<!--                        <field name="job_create_count" invisible="1"/>-->
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_job_center_tree" model="ir.ui.view">
        <field name="name">job.center.tree</field>
        <field name="model">job.center</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="location"/>
            </tree>
        </field>
    </record>

</odoo>

